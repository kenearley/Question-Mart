- content_for :after_scripts do
  = javascript_include_tag 'questions/index'
  = javascript_include_tag 'questions/_question'
  :javascript
    $(document).ready(function(){
      $(document).initPlugin({pluginName: "questionsIndex", controller: QM.QuestionsIndex});  
    });

%div.questions
  %h2 Latest Questions
  = render @questions
