- content_for :after_scripts do
  = javascript_include_tag 'answers/answersIndex'
  = javascript_include_tag 'answers/answer'
  :javascript
    $(document).ready(function(){
      $(document).answersIndex();  
    });

%h2
  = @question.title
%p
  = @question.question

%h3= pluralize(@question.answers.count, 'Answer')

#answersWrapper
  = render @answers

%div.answer-form
  %h3 Your answer
  = render :partial => 'form'
