- content_for do
  = javascript_include_tag 'questions/questionsIndex'
  :javascript
    $(document).ready(function(){
      $(document).questionsIndex();  
    });

%h2
  = @question.title
%p
  = @question.question

%h3= pluralize(@question.answers.count, 'Answer')

= render @answers

%div.answer-form
  %h3 Your answer
  = render :partial => 'form'
